<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:orientation="horizontal"
    android:padding="15dp"
    android:id="@+id/mainLayout" >

    <ImageButton 
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="center|fill_vertical"
        android:src="@drawable/user_48"
        android:id="@+id/toggleNumberOfSeatsButton"
        android:contentDescription="@string/numberOfSeatsToggleButtonText" />
    
    <TextView 
        android:visibility="invisible"
        android:layout_gravity="center|fill_vertical"
        android:id="@+id/numberOfSeatsLabel"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/numberOfSears" />

    <EditText
        android:visibility="invisible"
        android:layout_gravity="center|fill_vertical"
        android:id="@+id/numberOfSeatsText"
        android:layout_width="32dp"
        android:layout_column="1"
        android:layout_row="1"
        android:inputType="number" >

        <requestFocus />
    </EditText>
    
    <Button 
        android:visibility="invisible"
        android:layout_gravity="center|fill_vertical"
        android:id="@+id/numberOfSeatsSetButton"
        android:text="@string/numberOfSeatsSet"
        android:layout_row="1"
        android:layout_column="2"
        >
        
    </Button>

</GridLayout>